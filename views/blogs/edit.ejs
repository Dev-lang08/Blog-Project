<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Blog</h1>
        <div class="col-6 offset-3">
            <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="blog[title]" value="<%=blog.title %>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Content</label>
                    <textarea class="form-control" type="text" id="description" name="blog[content]"
                        required><%= blog.content%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Add Images</label>
                    <input class="form-control" type="file" id="formFileMultiple" multiple name="image">
                </div>
                <div class="mb-3">
                    <% blog.images.forEach(function(img, i){ %>
                        <img src="<%=img.url%>" class="img-thumbnail">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image<%= i%>" name="deleteImages[]" value="<%= img.filename %>">
                        </div>
                        <label for="image<%= i%>">Delete</label>
                        <%}) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update </button>
                </div>
            </form>
            <a href="/blogs/<%= blog._id%>">Back To Blog</a>

        </div>
    </div>