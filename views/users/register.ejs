<% layout('layouts/boilerplate')%>
    <h1>Register</h1>
    <form action="/register" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label" for="username">Username</label>
            <input class="form-control" type="text" id="username" name="username" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="email">Email</label>
            <input class="form-control" type="email" id="email" name="email" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" id="password" name="password" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="formFileSingle" class="form-label">Insert a Profile Picture</label>
            <input class="form-control" type="file" id="formFileSingle" name="image">
        </div>
        <button class="btn btn-success">Register</button>
    </form>